<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Aesir.Client.ViewModels"
             xmlns:u="https://irihi.tech/ursa"
             mc:Ignorable="d"
             x:DataType="vm:ChatHistoryButtonViewModel"
             x:Class="Aesir.Client.Controls.ChatHistoryButton">
    <UserControl.Resources>
        <SolidColorBrush x:Key="ButtonSolidTertiaryBackground" Opacity="0.16" Color="#54A9FF" />
        <SolidColorBrush x:Key="ButtonSolidTertiaryBorderBrush" Opacity="0.16" Color="#54A9FF" />
        
        <SolidColorBrush x:Key="ButtonSolidTertiaryPointeroverBackground" Opacity="0.16" Color="#54A9FF" />
        <SolidColorBrush x:Key="ButtonSolidTertiaryPointeroverBorderBrush" Opacity="0.16" Color="#54A9FF" />
        
        <SolidColorBrush x:Key="ButtonSolidTertiaryPressedBackground" Opacity="0.16" Color="#54A9FF" />
        <SolidColorBrush x:Key="ButtonSolidTertiaryPressedBorderBrush" Opacity="0.16" Color="#54A9FF" />
    </UserControl.Resources>
    <ToggleButton
        Classes="Tertiary"
        HorizontalAlignment="Stretch"
        HorizontalContentAlignment="Left"
        IsChecked="{Binding IsChecked, Mode=TwoWay}"
        PointerPressed="InputElement_OnPointerPressed">
        <ToggleButton.ContextMenu>
            <ContextMenu>
                <u:PopConfirm
                    PopupHeader="Rename Chat"
                    TriggerMode="Click"
                    ConfirmCommand="{Binding RenameCommand}"
                    CancelCommand="{Binding CancelRenameCommand}"
                    Placement="Pointer"
                >
                    <u:PopConfirm.PopupContentTemplate>
                        <DataTemplate>
                            <StackPanel Spacing="0" HorizontalAlignment="Left">
                                <u:Form LabelPosition="Left" LabelWidth="*" DataContext="{Binding $parent[UserControl].((vm:ChatHistoryButtonViewModel)DataContext)}">
                                    <TextBox Text="{Binding Title}" 
                                             u:FormItem.Label="Name"
                                             u:FormItem.IsRequired="True"
                                             TextWrapping="NoWrap"
                                             Width="200"
                                    />
                                </u:Form>
                            </StackPanel>
                        </DataTemplate>
                    </u:PopConfirm.PopupContentTemplate>
                    <MenuItem Header="Rename" HorizontalAlignment="Left" />
                </u:PopConfirm>    
                <u:PopConfirm
                    PopupHeader="Delete Chat"
                    TriggerMode="Click"
                    PopupContent="Are you sure you want to delete this chat? This action cannot be undone."
                    ConfirmCommand="{Binding DeleteCommand}"
                    Placement="Pointer"
                >
                    <MenuItem Header="Delete"/>
                </u:PopConfirm>
                <!-- <Separator/> -->
                <!-- <MenuItem Header="Copy Chat ID" Command="{Binding CopyChatIdCommand}"/> -->
            </ContextMenu>
        </ToggleButton.ContextMenu>
        
        <TextBlock Text="{Binding Title}" TextTrimming="CharacterEllipsis"></TextBlock>
    </ToggleButton>

</UserControl>