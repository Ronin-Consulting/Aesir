<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:material="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:local="using:Aesir.Client"
             xmlns:semi="https://irihi.tech/semi"
             xmlns:u-semi="https://irihi.tech/ursa/themes/semi"
             xmlns:conv="using:Aesir.Client.Converters"
             x:Class="Aesir.Client.App"
             RequestedThemeVariant="Dark"
             >
    
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>
    
    <Application.Styles>
        <semi:SemiTheme Locale="en-US" />
        <u-semi:SemiTheme Locale="en-US" />
        <semi:SemiPopupAnimations />
        <semi:ColorPickerSemiTheme />
        <semi:DataGridSemiTheme />
        <semi:TreeDataGridSemiTheme />
        <material:MaterialIconStyles />
        <Style Selector="Border">
            <Setter Property="BorderBrush" Value="{DynamicResource SemiColorBlack}"></Setter>
        </Style>
    </Application.Styles>
    
    <Application.Resources>
        <conv:EnumDescriptionConverter x:Key="EnumDescConverter" />
    </Application.Resources>
</Application>