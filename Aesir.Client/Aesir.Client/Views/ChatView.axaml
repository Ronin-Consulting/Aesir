<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:vm="clr-namespace:Aesir.Client.ViewModels"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:controls="clr-namespace:Aesir.Client.Controls"
    xmlns:converters="clr-namespace:Aesir.Client.Converters"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    xmlns:common="clr-namespace:Aesir.Common.Models;assembly=Aesir.Common"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="Aesir.Client.Views.ChatView"
    x:DataType="vm:ChatViewViewModel">
    
    <UserControl.Styles>
        <Style Selector="MenuFlyoutPresenter.agentMenu">
        </Style>
        <Style Selector="MenuFlyoutPresenter.agentMenu MenuItem">
            <Setter Property="Padding" Value="16 4,8 4" />
            <Setter Property="MinHeight" Value="32" />
            <Setter Property="Height" Value="32" />
        </Style>
        <Style Selector="MenuFlyoutPresenter.agentMenu Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="AntiqueWhite" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0,4,0,4" />
            <Setter Property="MinHeight" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
        <Style Selector="MenuFlyoutPresenter.agentMenu Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="MenuFlyoutPresenter.agentMenu Button:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="MenuFlyoutPresenter.agentMenu Button:pointerover">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>
        <Style Selector="MenuFlyoutPresenter.agentMenu Button:pressed">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>
    </UserControl.Styles>
    
    <RelativePanel>
        <DockPanel
            RelativePanel.AlignTopWithPanel="True"
            RelativePanel.AlignRightWithPanel="True"
            RelativePanel.AlignLeftWithPanel="True"
            ZIndex="100">
            <DockPanel Width="450" Margin="14, 10, 10, 10">
                <Button Classes="Primary" DockPanel.Dock="Left" 
                        Theme="{DynamicResource OutlineButton}"
                        Command="{Binding ToggleLeftPane}"
                        ToolTip.Tip="Toggle Sidebar">
                    <avalonia:MaterialIcon Kind="{Binding PanelOpen, Converter={x:Static converters:BoolMenuIconConverter.Instance}}"
                                           Width="20" Height="20" />
                </Button>
                <Panel />
            </DockPanel>
            <DockPanel
                Margin="10, 10, 14, 10"
                LastChildFill="True">
                <Button Classes="Primary" DockPanel.Dock="Right" Margin="0,0,10,0"
                        Theme="{DynamicResource OutlineButton}"
                        Command="{Binding ToggleNewChat}"
                        ToolTip.Tip="New Chat">
                    <avalonia:MaterialIcon Kind="CommentAdd" Width="20" Height="34" />
                </Button>
                <Panel />
            </DockPanel>
        </DockPanel>
        <SplitView IsPaneOpen="{Binding PanelOpen}"
                   DisplayMode="CompactInline"
                   PanePlacement="Left"
                   CompactPaneLength="0"
                   RelativePanel.AlignTopWithPanel="True"
                   RelativePanel.AlignRightWithPanel="True"
                   RelativePanel.AlignLeftWithPanel="True"
                   RelativePanel.AlignBottomWithPanel="True"
                   ZIndex="1"
                   PaneOpening="SplitView_OnPaneOpening"
                   PaneClosing="SplitView_OnPaneClosing">
            <SplitView.Pane>
                <controls:ChatHistory />
            </SplitView.Pane>
            <Border
                BorderThickness="1,0,0,0">
                <DockPanel>
                    <Panel DockPanel.Dock="Top" Margin="0 10 0 0">
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10">
                            <TextBlock Name="TitleTextBlock" DockPanel.Dock="Top" HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Theme="{StaticResource TitleTextBlock}"
                                       Text="AESIR AI"
                                       Classes="H4"/>
                            <Button Classes="Primary" 
                                    Theme="{DynamicResource OutlineButton}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="10,7,7,7">
                                <Button.Flyout>
                                    <MenuFlyout Placement="Right" FlyoutPresenterClasses="agentMenu"
                                                ItemsSource="{Binding AvailableAgents}">
                                        <MenuFlyout.ItemTemplate>
                                            <DataTemplate x:DataType="common:AesirAgentBase">
                                                <Button Command="{Binding $parent[UserControl].((vm:ChatViewViewModel)DataContext).SelectAgent}"
                                                        CommandParameter="{Binding}">
                                                    <DockPanel>
                                                        <avalonia:MaterialIcon Kind="Check" 
                                                                Width="16" Height="16" 
                                                                VerticalAlignment="Center"
                                                                DockPanel.Dock="Right"
                                                                Margin="8,0,0,0">
                                                            <avalonia:MaterialIcon.IsVisible>
                                                                <MultiBinding Converter="{x:Static converters:AgentSelectionVisibilityConverter.Instance}">
                                                                    <Binding />
                                                                    <Binding Path="$parent[UserControl].((vm:ChatViewViewModel)DataContext).SelectedAgent" />
                                                                </MultiBinding>
                                                            </avalonia:MaterialIcon.IsVisible>
                                                        </avalonia:MaterialIcon>
                                                        <TextBlock Text="{Binding Name}" 
                                                                   VerticalAlignment="Center" />
                                                    </DockPanel>
                                                </Button>
                                            </DataTemplate>
                                        </MenuFlyout.ItemTemplate>
                                    </MenuFlyout>
                                </Button.Flyout>
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <TextBlock Text="{Binding SelectedAgentName}"
                                               VerticalAlignment="Center"
                                               FontWeight="Medium" />
                                    <avalonia:MaterialIcon Kind="ChevronRight" 
                                                           Width="18" 
                                                           Height="18" 
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Panel>
                    <Border BorderThickness="0,1,0,0" DockPanel.Dock="Bottom">
                        <DockPanel Margin="10">
                            <DockPanel DockPanel.Dock="Bottom">
                                <Button Classes="Primary" DockPanel.Dock="Left" Margin="0,0,6,0"
                                        Theme="{DynamicResource OutlineButton}"
                                        Command="{Binding ShowFileSelectionCommand}"
                                        IsEnabled="{Binding SelectedFileEnabled}"
                                        ToolTip.Tip="Attach File"
                                >
                                    <avalonia:MaterialIcon Kind="Paperclip" Width="20" Height="34" />
                                </Button>
                                <Button Name="SendMessageButton" IsVisible="{Binding HasChatMessage}"
                                        DockPanel.Dock="Right" Margin="6,0,0,0"
                                        Theme="{DynamicResource OutlineButton}" Command="{Binding SendMessageCommand}"
                                        ToolTip.Tip="Send"
                                        >
                                    <avalonia:MaterialIcon Kind="Send" Width="20" Height="20" />
                                </Button>
                                <controls:CustomTextBox
                                    Name="MessageAiTextBox"
                                    PropertyChanged="MessageAiTextBox_OnPropertyChanged"
                                    Classes="Bordered TextArea"
                                    MinHeight="32" MaxHeight="256" LineHeight="24" TextWrapping="Wrap"
                                    NewLine="{Binding Source={x:Static sys:String.Empty}}"
                                    IsEnabled="{Binding !SendingChatOrProcessingFile}"
                                    Watermark="Message AI" Text="{Binding ChatMessage, Mode=TwoWay}"
                                    VerticalContentAlignment="Center">
                                    <controls:CustomTextBox.InnerLeftContent>
                                    </controls:CustomTextBox.InnerLeftContent>
                                    <controls:CustomTextBox.InnerRightContent>
                                        <Button Classes="Small Primary"
                                                Padding="0"
                                                Margin="0"
                                                Theme="{DynamicResource BorderlessButton}"
                                                Command="{Binding ShowHandsFree}"
                                                ToolTip.Tip="Hands Free Mode"
                                                >
                                            <Panel>
                                                <avalonia:MaterialIcon
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Kind="Waveform" Width="20" Height="20" />
                                            </Panel>
                                        </Button>
                                    </controls:CustomTextBox.InnerRightContent>
                                </controls:CustomTextBox>
                            </DockPanel>
                            <controls:Conversation />
                        </DockPanel>
                    </Border>
                </DockPanel>
            </Border>
        </SplitView>
    </RelativePanel>
</UserControl>