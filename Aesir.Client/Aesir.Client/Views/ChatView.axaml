<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:vm="clr-namespace:Aesir.Client.ViewModels"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:controls="clr-namespace:Aesir.Client.Controls"
    xmlns:converters="clr-namespace:Aesir.Client.Converters"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    xmlns:common="clr-namespace:Aesir.Common.Models;assembly=Aesir.Common"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="Aesir.Client.Views.ChatView"
    x:DataType="vm:ChatViewViewModel">

    <UserControl.Styles>
        <Style Selector="MenuFlyoutPresenter.agentMenu">
        </Style>
        <Style Selector="MenuFlyoutPresenter.agentMenu MenuItem">
            <Setter Property="Padding" Value="16 4,8 4" />
            <Setter Property="MinHeight" Value="32" />
            <Setter Property="Height" Value="32" />
        </Style>
        <Style Selector="MenuFlyoutPresenter.agentMenu Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="AntiqueWhite" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0,4,0,4" />
            <Setter Property="MinHeight" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
        <Style Selector="MenuFlyoutPresenter.agentMenu Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="MenuFlyoutPresenter.agentMenu Button:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="MenuFlyoutPresenter.agentMenu Button:pointerover">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>
        <Style Selector="MenuFlyoutPresenter.agentMenu Button:pressed">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>
    </UserControl.Styles>

    <DockPanel>
        <!-- Error Panel - Shows at the top when there's a configuration error -->
        <Border
            Name="ErrorPanel"
            DockPanel.Dock="Top"
            Background="#FDF2F2"
            BorderBrush="#E5B4B4"
            BorderThickness="0,0,0,1"
            Padding="12,8"
            IsVisible="{Binding !IsSystemConfigurationComplete}"
            ZIndex="200">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <avalonia:MaterialIcon Kind="Alert"
                                       Width="16"
                                       Height="16"
                                       Foreground="#CC0000"
                                       VerticalAlignment="Center" />
                <TextBlock
                    Text="System configuration is not yet complete. Please setup Inference Engine(s) and General Settings, then restart the server to take effect."
                    FontSize="13"
                    Foreground="#CC0000"
                    VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Main Panel - Shows below error panel (if present) -->
        <RelativePanel>
            <DockPanel
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                ZIndex="100">
                <DockPanel Width="450" Margin="14, 10, 10, 10">
                    <Button Classes="Primary" DockPanel.Dock="Left"
                            Theme="{DynamicResource OutlineButton}"
                            Command="{Binding ToggleLeftPane}"
                            ToolTip.Tip="Toggle Sidebar">
                        <avalonia:MaterialIcon
                            Kind="{Binding PanelOpen, Converter={x:Static converters:BoolMenuIconConverter.Instance}}"
                            Width="20" Height="20" />
                    </Button>
                    <Panel />
                </DockPanel>
                <DockPanel
                    Margin="10, 0, 14, 0"
                    LastChildFill="True">
                    <Button Classes="Primary" DockPanel.Dock="Right" Margin="0,0,10,0"
                            Theme="{DynamicResource OutlineButton}"
                            Command="{Binding ToggleNewChat}"
                            IsEnabled="{Binding IsSystemConfigurationComplete}"
                            ToolTip.Tip="New Chat">
                        <avalonia:MaterialIcon Kind="CommentAdd" Width="20" Height="34" />
                    </Button>
                    <Panel />
                </DockPanel>
            </DockPanel>
            <SplitView IsPaneOpen="{Binding PanelOpen}"
                       DisplayMode="CompactInline"
                       PanePlacement="Left"
                       CompactPaneLength="0"
                       RelativePanel.AlignTopWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignBottomWithPanel="True"
                       ZIndex="1"
                       PaneOpening="SplitView_OnPaneOpening"
                       PaneClosing="SplitView_OnPaneClosing">
                <SplitView.Pane>
                    <controls:ChatHistory />
                </SplitView.Pane>
                <Border BorderThickness="1,0,0,0" Padding="0 0,0 ,0">
                    <DockPanel Margin="0 10 0 ,0">
                        <Panel DockPanel.Dock="Top">
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="0 0,0 ,12">
                                <TextBlock Name="TitleTextBlock" DockPanel.Dock="Top" HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Theme="{StaticResource TitleTextBlock}"
                                           Text="AESIR AI"
                                           Classes="H4" />
                                <Button Classes="Primary"
                                        Theme="{DynamicResource OutlineButton}"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        IsEnabled="{Binding IsSystemConfigurationComplete}"
                                        Padding="10,0,0,0">
                                    <Button.Flyout>
                                        <MenuFlyout Placement="Right" FlyoutPresenterClasses="agentMenu"
                                                    ItemsSource="{Binding AvailableAgents}">
                                            <MenuFlyout.ItemTemplate>
                                                <DataTemplate x:DataType="common:AesirAgentBase">
                                                    <Button
                                                        Command="{Binding $parent[UserControl].((vm:ChatViewViewModel)DataContext).SelectAgent}"
                                                        CommandParameter="{Binding}">
                                                        <DockPanel>
                                                            <avalonia:MaterialIcon Kind="Check"
                                                                    Width="16" Height="16"
                                                                    VerticalAlignment="Center"
                                                                    DockPanel.Dock="Right"
                                                                    Margin="8,0,0,0">
                                                                <avalonia:MaterialIcon.IsVisible>
                                                                    <MultiBinding
                                                                        Converter="{x:Static converters:AgentSelectionVisibilityConverter.Instance}">
                                                                        <Binding />
                                                                        <Binding
                                                                            Path="$parent[UserControl].((vm:ChatViewViewModel)DataContext).SelectedAgent" />
                                                                    </MultiBinding>
                                                                </avalonia:MaterialIcon.IsVisible>
                                                            </avalonia:MaterialIcon>
                                                            <TextBlock Text="{Binding Name}"
                                                                       VerticalAlignment="Center" />
                                                        </DockPanel>
                                                    </Button>
                                                </DataTemplate>
                                            </MenuFlyout.ItemTemplate>
                                        </MenuFlyout>
                                    </Button.Flyout>
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <TextBlock Text="{Binding SelectedAgentName}"
                                                   VerticalAlignment="Center"
                                                   FontWeight="Medium" />
                                        <avalonia:MaterialIcon Kind="ChevronRight"
                                                               Width="18"
                                                               Height="18"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Panel>
                        <Border BorderThickness="0,1,0,0" DockPanel.Dock="Bottom">
                                                            <DockPanel Margin="10">
                                    <controls:Conversation DockPanel.Dock="Top" Height="625" />
                                    <Border CornerRadius="10"
                                            Background="#232429"
                                            BorderBrush="{ StaticResource SemiColorBorder }"
                                            BorderThickness="1"
                                            Padding="10"
                                            DockPanel.Dock="Bottom"
                                    >
                                    <DockPanel  Height="75" VerticalSpacing="10">
                                        <controls:CustomTextBox DockPanel.Dock="Top" HorizontalAlignment="Stretch"
                                                                Name="MessageAiTextBox"
                                                                PropertyChanged="MessageAiTextBox_OnPropertyChanged"
                                                                Classes="Bordered TextArea"
                                                                MinHeight="32" MaxHeight="256" LineHeight="24"
                                                                TextWrapping="Wrap"
                                                                NewLine="{Binding Source={x:Static sys:String.Empty}}"
                                                                Watermark="Message AI"
                                                                Text="{Binding ChatMessage, Mode=TwoWay}"
                                                                VerticalContentAlignment="Center">
                                            <controls:CustomTextBox.IsEnabled>
                                                <MultiBinding
                                                    Converter="{x:Static converters:BooleanAndConverter.Instance}">
                                                    <Binding Path="SelectedFileEnabled" />
                                                    <Binding Path="!SendingChatOrProcessingFile" />
                                                </MultiBinding>
                                            </controls:CustomTextBox.IsEnabled>
                                            <controls:CustomTextBox.InnerLeftContent>
                                            </controls:CustomTextBox.InnerLeftContent>
                                            <controls:CustomTextBox.InnerRightContent>
                                                <Button Classes="Small Primary"
                                                        Padding="0"
                                                        Margin="0"
                                                        Theme="{DynamicResource BorderlessButton}"
                                                        Command="{Binding ShowHandsFree}"
                                                        ToolTip.Tip="Hands Free Mode"
                                                        IsEnabled="{Binding IsSystemConfigurationComplete}">
                                                    <Panel>
                                                        <avalonia:MaterialIcon
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Kind="Waveform" Width="20" Height="20" />
                                                    </Panel>
                                                </Button>
                                            </controls:CustomTextBox.InnerRightContent>
                                        </controls:CustomTextBox>
                                        <Panel DockPanel.Dock="Bottom" HorizontalAlignment="Stretch">
                                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Spacing="6">
                                                <Button Classes="Primary" 
                                                        Margin="0,0,0,0"
                                                        Theme="{DynamicResource OutlineButton}"
                                                        Command="{Binding ShowFileSelectionCommand}"
                                                        ToolTip.Tip="Attach File">
                                                    <Button.IsEnabled>
                                                        <MultiBinding
                                                            Converter="{x:Static converters:BooleanAndConverter.Instance}">
                                                            <Binding Path="SelectedFileEnabled" />
                                                            <Binding Path="IsSystemConfigurationComplete" />
                                                        </MultiBinding>
                                                    </Button.IsEnabled>
                                                    <avalonia:MaterialIcon Kind="Paperclip" Width="20" Height="34" />
                                                </Button>
                                                <Button Classes="Primary"
                                                        Margin="0,0,0,0"
                                                        Theme="{DynamicResource OutlineButton}"
                                                        IsEnabled="True"
                                                        ToolTip.Tip="Toggle Web Search">
                                                    <avalonia:MaterialIcon Kind="Web" Width="20" Height="34" />
                                                </Button>
                                                <Button Classes="Primary"
                                                        Margin="0,0,0,0"
                                                        Theme="{DynamicResource OutlineButton}"
                                                        IsEnabled="False"
                                                        ToolTip.Tip="Thinking Setting">
                                                    <avalonia:MaterialIcon Kind="HeadThinkingOutline" Width="20" Height="34" />
                                                </Button>
                                            </StackPanel>
                                            <Button Name="SendMessageButton" HorizontalAlignment="Right"
                                                    Margin="6,0,0,0"
                                                    Theme="{DynamicResource OutlineButton}"
                                                    Command="{Binding SendMessageCommand}"
                                                    ToolTip.Tip="Send">
                                                <Button.IsEnabled>
                                                    <MultiBinding
                                                        Converter="{x:Static converters:BooleanAndConverter.Instance}">
                                                        <Binding Path="IsSystemConfigurationComplete" />
                                                        <Binding Path="HasChatMessage" />
                                                    </MultiBinding>
                                                </Button.IsEnabled>
                                                <avalonia:MaterialIcon Kind="Send" Width="20" Height="20" />
                                            </Button>
                                        </Panel>
                                    </DockPanel>
                                    </Border>
                                </DockPanel>
                        </Border>
                    </DockPanel>
                </Border>
            </SplitView>
        </RelativePanel>
    </DockPanel>
</UserControl>