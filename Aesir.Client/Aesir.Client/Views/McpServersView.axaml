<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:vm="clr-namespace:Aesir.Client.ViewModels"
    xmlns:dvm="clr-namespace:Aesir.Client.ViewModels.Design"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="Aesir.Client.Views.McpServersView"
    x:DataType="vm:McpServersViewViewModel">
    
    <Design.DataContext>    
        <dvm:DesignMcpServersViewViewModel />
    </Design.DataContext>
    
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="16, 10, 14, 16">
            <TextBlock Name="TitleTextBlock" HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Classes="H4" Theme="{StaticResource TitleTextBlock}"
                       DockPanel.Dock="Left">
                <Run>AESIR AI - MCP Servers</Run>
            </TextBlock>
            <DockPanel DockPanel.Dock="Right">
                <Button Classes="Primary" DockPanel.Dock="Right" Margin="0,0,6,0"
                        Theme="{DynamicResource OutlineButton}"
                        Command="{Binding ShowChat}"
                        ToolTip.Tip="Close MCP Servers">
                    <avalonia:MaterialIcon Kind="WindowClose" Width="20" Height="34" />
                </Button>
                <Panel />
            </DockPanel>
        </DockPanel>
        <Border BorderThickness="0,1,0,00" DockPanel.Dock="Bottom">
            <DockPanel>
                <DockPanel 
                    DockPanel.Dock="Bottom"
                    Margin="20,0,20,15">
                    <Button 
                            DockPanel.Dock="Right" 
                            Classes="Primary" 
                            Theme="{DynamicResource OutlineButton}"
                            HorizontalContentAlignment="Center"
                            Padding="12,5,12,5"
                            Command="{Binding ShowAddMcpServer}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <avalonia:MaterialIcon Kind="PlusBox" 
                                                   Width="20" 
                                                   Height="20" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" />
                            <TextBlock Text="Add MCP Server"
                                       VerticalAlignment="Center"
                                       FontWeight="Medium" />
                        </StackPanel>
                    </Button>

                    <TextBlock
                        DockPanel.Dock="Left"
                        Text="{Binding McpServers.Count, StringFormat='Displaying {0} MCP Servers'}" />
                </DockPanel>
                <DataGrid Margin="20 20 20 10" ItemsSource="{Binding McpServers}" 
                          IsReadOnly="True" 
                          GridLinesVisibility="None"
                          BorderThickness="1" BorderBrush="DimGray"
                          SelectedItem="{Binding SelectedMcpServer}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </DockPanel>
    
</UserControl>