<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:vm="clr-namespace:Aesir.Client.ViewModels"
    xmlns:dvm="clr-namespace:Aesir.Client.ViewModels.Design"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="Aesir.Client.Views.DocumentsView"
    x:DataType="vm:DocumentsViewViewModel">
    
    <Design.DataContext>    
        <dvm:DesignDocumentsViewViewModel />
    </Design.DataContext>
    
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="16, 10, 14, 16">
            <TextBlock Name="TitleTextBlock" HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Classes="H4" Theme="{StaticResource TitleTextBlock}"
                       DockPanel.Dock="Left">
                <Run>AESIR AI - Documents</Run>
            </TextBlock>
            <DockPanel DockPanel.Dock="Right">
                <Button Classes="Primary" DockPanel.Dock="Right" Margin="0,0,6,0"
                        Theme="{DynamicResource OutlineButton}"
                        Command="{Binding ShowChat}"
                        ToolTip.Tip="Close Tools">
                    <avalonia:MaterialIcon Kind="WindowClose" Width="20" Height="34" />
                </Button>
                <Panel />
            </DockPanel>
        </DockPanel>
        <Border BorderThickness="0,1,0,00" DockPanel.Dock="Bottom">
            <DockPanel>
                <DockPanel 
                    DockPanel.Dock="Bottom"
                    Margin="20,0,20,15">
                    <TextBlock
                        DockPanel.Dock="Left"
                        Text="{Binding Documents.Count, StringFormat='Displaying {0} documents'}" />
                </DockPanel>
                <DataGrid Margin="20 20 20 10" ItemsSource="{Binding Documents}" 
                          IsReadOnly="True" 
                          GridLinesVisibility="None"
                          BorderThickness="1" BorderBrush="DimGray"
                          CellPointerPressed="InputElement_OnCellPointerPressed"
                          SelectedItem="{Binding SelectedDocument}">
                    <DataGrid.Columns>
                        <DataGridTextColumn FontWeight="Bold" Header="FileName" Binding="{Binding FileNameDisplay}"/>
                        <DataGridTextColumn Header="FileSize" Binding="{Binding FileSizeDisplay}"/>
                        <DataGridTextColumn Header="Last Modified" Binding="{Binding UpdatedAtDisplay}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </DockPanel>
    
</UserControl>