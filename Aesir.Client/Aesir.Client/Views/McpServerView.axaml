<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:vm="clr-namespace:Aesir.Client.ViewModels"
    xmlns:dvm="clr-namespace:Aesir.Client.ViewModels.Design"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
    x:Class="Aesir.Client.Views.McpServerView"
    x:DataType="vm:McpServerViewViewModel">
    
    <Design.DataContext>    
        <dvm:DesignMcpServerViewViewModel />
    </Design.DataContext>
    
    <Grid
        MinWidth="400"
        MaxWidth="400"
        Margin="8"
        RowDefinitions="Auto, *, Auto">
        <!-- Header -->
        <TextBlock
            Grid.Row="0"
            Margin="8"
            FontSize="16"
            FontWeight="600"
            Text="MCP Server Detail" />
        
        <!-- Form Body -->
        <u:Form
            Grid.Row="1"
            Margin="8"
            HorizontalAlignment="Stretch"
            LabelPosition="Top">
            <u:Form.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid ColumnDefinitions="Auto, *, Auto" RowDefinitions="Auto, Auto, Auto, Auto, *" HorizontalAlignment="Stretch" />
                </ItemsPanelTemplate>
            </u:Form.ItemsPanel>
            <u:FormItem 
                Grid.Row="0" 
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Label="Name" >
                <TextBox Text="{Binding FormModel.Name}" />
            </u:FormItem>
            <u:FormItem 
                Grid.Row="1" 
                Grid.Column="0"
                Grid.ColumnSpan="3" 
                Label="Description">
                <TextBox TextWrapping="Wrap" MinHeight="100" VerticalContentAlignment="Top" Text="{Binding FormModel.Description}" />
            </u:FormItem>
            <u:FormItem 
                Grid.Row="2" 
                Grid.Column="0"
                Grid.ColumnSpan="3" 
                Label="Command">
                <TextBox TextWrapping="Wrap" MinHeight="60" VerticalContentAlignment="Top" Text="{Binding FormModel.Command}" />
            </u:FormItem>
            <u:FormItem 
                Grid.Row="3" 
                Grid.Column="0"
                Grid.ColumnSpan="3" 
                Label="Arguments">
                <StackPanel>
                        <ItemsControl ItemsSource="{Binding FormModel.Arguments}" HorizontalAlignment="Stretch">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel HorizontalAlignment="Stretch" Spacing="4" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:ArgumentItem">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBox Grid.Column="0" Text="{Binding Value}" VerticalAlignment="Center" Margin="0 0 6 0 "/>
                                        <Button Grid.Column="1"
                                                Classes="Primary" 
                                                Theme="{DynamicResource OutlineButton}"
                                                Command="{Binding $parent[ItemsControl].((vm:McpServerViewViewModel)DataContext).DeleteArgumentCommand}"
                                                CommandParameter="{Binding}"
                                                ToolTip.Tip="Remove Argument">
                                            <avalonia:MaterialIcon Kind="Remove" Width="16" Height="16" />
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    <HyperlinkButton Content="Add Argument" 
                                     HorizontalAlignment="Right" 
                                     Margin="0,8,0,0"
                                     Command="{Binding AddArgumentCommand}"/>
                </StackPanel>
            </u:FormItem>
            <u:FormItem 
                Grid.Row="4" 
                Grid.Column="0"
                Grid.ColumnSpan="3" 
                Label="Environment Variables">
                <StackPanel>
                        <ItemsControl ItemsSource="{Binding FormModel.EnvironmentVariables}" HorizontalAlignment="Stretch">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel HorizontalAlignment="Stretch" Spacing="4" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="vm:EnvironmentVariableItem">
                                    <Grid ColumnDefinitions="*, *, Auto">
                                        <TextBox Grid.Column="0" Text="{Binding Name}" VerticalAlignment="Center" Margin="0 0 6 0 "/>
                                        <TextBox Grid.Column="1" Text="{Binding Value}" VerticalAlignment="Center" Margin="0 0 6 0 "/>
                                        <Button Grid.Column="2"
                                                Classes="Primary" 
                                                Theme="{DynamicResource OutlineButton}"
                                                Command="{Binding $parent[ItemsControl].((vm:McpServerViewViewModel)DataContext).DeleteEnvironmentVariableCommand}"
                                                CommandParameter="{Binding}"
                                                ToolTip.Tip="Remove EnvironmentVariable">
                                            <avalonia:MaterialIcon Kind="Remove" Width="16" Height="16" />
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    <HyperlinkButton Content="Add Environment Variable" 
                                     HorizontalAlignment="Right" 
                                     Margin="0,8,0,0"
                                     Command="{Binding AddEnvironmentVariableCommand}"/>
                </StackPanel>
            </u:FormItem>
        </u:Form>
        
        <!-- Buttons -->
        <DockPanel
            Grid.Row="2"
            Margin="8">
            <StackPanel
                DockPanel.Dock="Left"
                Orientation="Horizontal"
                Spacing="8">
                <u:IconButton 
                    HorizontalAlignment="Right"
                    Content="Save"
                    IconPlacement="Left" 
                    Command="{Binding SaveCommand}">
                    <u:IconButton.Icon>
                        <avalonia:MaterialIcon Kind="CheckBold" Width="20" Height="20" />
                    </u:IconButton.Icon>
                </u:IconButton>
                <u:IconButton 
                    HorizontalAlignment="Right"
                    Classes="Tertiary"
                    Content="Cancel"
                    IconPlacement="Left" 
                    Command="{Binding CancelCommand}">
                    <u:IconButton.Icon>
                        <avalonia:MaterialIcon Kind="Cancel" Width="20" Height="20" />
                    </u:IconButton.Icon>
                </u:IconButton>
            </StackPanel>
            <u:IconButton 
                HorizontalAlignment="Right"
                Classes="Danger"
                Content="Delete"
                IconPlacement="Left" 
                IsEnabled="{Binding FormModel.IsExisting}"
                Command="{Binding DeleteCommand}">
                <u:IconButton.Icon>
                    <avalonia:MaterialIcon Kind="Delete" Width="20" Height="20" />
                </u:IconButton.Icon>
            </u:IconButton>
        </DockPanel>
    </Grid>
    
</UserControl>
