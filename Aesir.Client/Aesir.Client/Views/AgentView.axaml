<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:vm="clr-namespace:Aesir.Client.ViewModels"
    xmlns:dvm="clr-namespace:Aesir.Client.ViewModels.Design"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
    x:Class="Aesir.Client.Views.AgentView"
    x:DataType="vm:AgentViewViewModel">
    
    <Design.DataContext>    
        <dvm:DesignAgentViewViewModel />
    </Design.DataContext>
    
    <Grid
        MinWidth="400"
        Margin="8"
        RowDefinitions="Auto, *, Auto">
        <!-- Header -->
        <TextBlock
            Grid.Row="0"
            Margin="8"
            FontSize="16"
            FontWeight="600"
            Text="Agent Detail" />
        
        <!-- Form Body -->
        <u:Form
            Grid.Row="1"
            Margin="8"
            HorizontalAlignment="Stretch"
            LabelPosition="Top">
            <u:Form.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid ColumnDefinitions="Auto, *, Auto" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, *" HorizontalAlignment="Stretch" />
                </ItemsPanelTemplate>
            </u:Form.ItemsPanel>
            <u:FormItem Label="Name" Grid.ColumnSpan="3">
                <TextBox Text="{Binding FormModel.Name}" />
            </u:FormItem>
            <u:FormItem
                Grid.Row="1"
                Grid.Column="0"
                Label="Source">
                <ComboBox Width="150"
                          ItemsSource="{Binding AvailableSources}"
                          SelectedItem="{Binding FormModel.Source}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumDescConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </u:FormItem>
            <u:FormItem
                Grid.Row="1"
                Grid.Column="2"
                Label="Prompt"
                Margin="32,8,0,8">
                <ComboBox Width="150"
                          ItemsSource="{Binding AvailablePrompts}"
                          SelectedItem="{Binding FormModel.Prompt}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumDescConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </u:FormItem>
            <u:FormItem 
                Grid.Row="3" 
                Grid.ColumnSpan="3"
                Label="Chat Model" >
                <ComboBox HorizontalAlignment="Stretch"
                          ItemsSource="{Binding AvailableChatModels}"
                          SelectedItem="{Binding FormModel.ChatModel}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumDescConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </u:FormItem>
            <u:FormItem 
                Grid.Row="4" 
                Grid.ColumnSpan="3"
                Label="Embedding Model" >
                <ComboBox HorizontalAlignment="Stretch"
                          ItemsSource="{Binding AvailableEmbeddingModels}"
                          SelectedItem="{Binding FormModel.EmbeddingModel}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumDescConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </u:FormItem>
            <u:FormItem 
                Grid.Row="5" 
                Grid.ColumnSpan="3"
                Label="Vision Model" >
                <ComboBox HorizontalAlignment="Stretch"
                          ItemsSource="{Binding AvailableVisionModels}"
                          SelectedItem="{Binding FormModel.VisionModel}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumDescConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </u:FormItem>
            <u:FormItem 
                Grid.Row="6" 
                Grid.ColumnSpan="3"
                Label="Tools" >
                <u:MultiComboBox
                    Watermark="Select Available Tools"
                    MaxHeight="200"
                    HorizontalAlignment="Stretch"
                    SelectedItems="{Binding FormModel.Tools}"
                    ItemsSource="{Binding AvailableTools}" />
            </u:FormItem>
        </u:Form>
        
        <!-- Buttons -->
        <DockPanel
            Grid.Row="2"
            Margin="8">
            <StackPanel
                DockPanel.Dock="Left"
                Orientation="Horizontal"
                Spacing="8">
                <u:IconButton 
                    HorizontalAlignment="Right"
                    Content="Save"
                    IconPlacement="Left" 
                    Command="{Binding SaveCommand}">
                    <u:IconButton.Icon>
                        <avalonia:MaterialIcon Kind="CheckBold" Width="20" Height="20" />
                    </u:IconButton.Icon>
                </u:IconButton>
                <u:IconButton 
                    HorizontalAlignment="Right"
                    Classes="Tertiary"
                    Content="Cancel"
                    IconPlacement="Left" 
                    Command="{Binding CancelCommand}">
                    <u:IconButton.Icon>
                        <avalonia:MaterialIcon Kind="Cancel" Width="20" Height="20" />
                    </u:IconButton.Icon>
                </u:IconButton>
            </StackPanel>
            <u:IconButton 
                HorizontalAlignment="Right"
                Classes="Danger"
                Content="Delete"
                IconPlacement="Left" 
                Command="{Binding DeleteCommand}">
                <u:IconButton.Icon>
                    <avalonia:MaterialIcon Kind="Delete" Width="20" Height="20" />
                </u:IconButton.Icon>
            </u:IconButton>
        </DockPanel>
    </Grid>
    
</UserControl>
