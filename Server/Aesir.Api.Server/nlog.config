<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/internal-nlog.txt">

  <!-- Enable ASP.NET Core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- Define targets where logs will be written -->
  <targets>
    <!-- Write all logs to file with correlation ID -->
    <target xsi:type="File" name="allfile" fileName="logs/aesir-all-${shortdate}.log"
            layout="${longdate}|${event-properties:item=CorrelationId}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
            archiveFileName="logs/archives/aesir-all-${shortdate}.{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="30"
            concurrentWrites="true"
            keepFileOpen="false"
            encoding="utf-8" />

    <!-- Write error logs to separate file with correlation ID -->
    <target xsi:type="File" name="errorfile" fileName="logs/aesir-error-${shortdate}.log"
            layout="${longdate}|${event-properties:item=CorrelationId}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}"
            archiveFileName="logs/archives/aesir-error-${shortdate}.{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="90"
            concurrentWrites="true"
            keepFileOpen="false"
            encoding="utf-8" />

    <!-- Console output for development with colors -->
    <target xsi:type="ColoredConsole" name="console"
            layout="${longdate}|${event-properties:item=CorrelationId}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}">
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="White" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>
  </targets>

  <!-- Rules to map loggers to targets -->
  <rules>
    <!-- Skip non-critical Microsoft logs to reduce noise -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />

    <!-- All logs (Trace and above) go to all-file -->
    <logger name="*" minlevel="Trace" writeTo="allfile" />

    <!-- Error logs (Warn and above) go to error-file -->
    <logger name="*" minlevel="Warn" writeTo="errorfile" />

    <!-- All logs (Debug and above) go to console in development -->
    <logger name="*" minlevel="Debug" writeTo="console" />
  </rules>
</nlog>
